[flake8]
exclude =
  .git,
  .mypy_cache,
  .pytest_cache,
  .venv,
  __pycache__,
  *.pyi

# options copied from https://black.readthedocs.io/en/stable/the_black_code_style/current_style.html#line-length
extend-ignore =
  # Whitespace before ':'
  E203,
  # Line too long
  E501,
  # Line break occurred before a binary operator
  W503

max-line-length = 88

select =
  B,
  B950,
  C,
  E,
  F,
  W
